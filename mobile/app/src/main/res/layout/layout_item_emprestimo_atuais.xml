<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:gravity="center"
    android:elevation="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="10dp"
    android:backgroundTint="?attr/colorSurface"
    android:background="@drawable/borda_arredondada_caixa"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
    android:id="@+id/llMidia"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toStartOf="@id/llInfoEmprestimo"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:contentDescription="@string/imagem_item"
        android:src="@drawable/img_livro_teste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/titulo_item"
        android:textAllCaps="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:textColor="?attr/colorOnBackground"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/autor_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="10sp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/llInfoEmprestimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llMidia"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dtEmprestimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/dt_emprestimo"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnBackground"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/dtDevolucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dt_devolucao"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnBackground"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvNumDevolucoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="@string/aviso_item_emprestimo"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/btnRenovar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/botao_layout_borda_cor"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="TouchTargetSizeCheck">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:contentDescription="@string/icone_renovar"
                android:minHeight="26dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_renovar" />

            <!-- Linha separadora -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical"
                android:text="@string/btnRenovar"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvMulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="@string/tv_multa"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>