<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConfiguracoesActivity"
    android:padding="0dp"
    android:exported="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_gradient_centro">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/borda_arredondada_topo"
    android:backgroundTint="?attr/backgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginBottom="77dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:id="@+id/llPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginBottom="77dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/desc_foto_perfil"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/img_perfil_formato"
            android:src="@drawable/img_perfil" />

        <ImageButton
            android:id="@+id/ibEditarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btn_editar_config"
            android:elevation="10dp"
            android:padding="12dp"
            android:clickable="true"
            android:layout_gravity="bottom|end"
            app:tint="?attr/colorOnPrimary"
            android:background="@drawable/layout_button_edit"
            android:backgroundTint="?attr/colorSurface"
            android:src="@drawable/icon_edit_perfil"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="@string/username_cliente"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="15dp"
            android:backgroundTint="?attr/colorPrimary"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="@string/email_cliente"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="?attr/colorOnPrimary"
                android:background="@drawable/layout_textview"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="?attr/colorPrimary"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/llEditarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:tint="?attr/colorOnPrimary"
                android:contentDescription="@string/btn_editar_config"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_edit_perfil"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center_vertical"
                android:text="@string/btn_editar_config"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8" />
            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:clickable="true"
                android:contentDescription="@string/icon_seta"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_seta_direita"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="?attr/colorPrimary"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/llContraste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/ivModoDesign"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginHorizontal="5dp"
                app:tint="?attr/colorOnPrimary"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/btn_contraste_config"
                android:src="@drawable/icon_dark_mode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center_vertical"
                android:text="@string/btn_contraste_config"/>


        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="?attr/colorPrimary"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/llFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:contentDescription="@string/btn_fav_config"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:tint="?attr/colorOnPrimary"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_desejo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center_vertical"
                android:text="@string/btn_fav_config"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8" />
            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:clickable="true"
                android:contentDescription="@string/icon_seta"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_seta_direita"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="?attr/colorPrimary"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/llEmprestimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:tint="?attr/colorOnPrimary"
                android:contentDescription="@string/btn_emprestimo_config"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_emprestimo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center_vertical"
                android:text="@string/btn_emprestimo_config"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8" />
            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:clickable="true"
                android:contentDescription="@string/icon_seta"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_seta_direita"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="?attr/colorPrimary"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginHorizontal="5dp"
                app:tint="?attr/colorOnPrimary"
                android:contentDescription="@string/btn_logout"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_logout"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center_vertical"
                android:text="@string/btn_logout"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>

</ScrollView>
    <include
        android:id="@+id/menu_layout"
        layout="@layout/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/background_cinza"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/fundo_popmenu"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/menu_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>