<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/layout_textview"
        android:backgroundTint="?attr/backgroundColor"
        android:elevation="20dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:text="@string/tit_pop_logout"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/desc_pop_logout"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="?attr/text_midDestaque"
            android:textSize="12sp"
            android:layout_marginVertical="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/botao_layout_borda_cor"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="TouchTargetSizeCheck">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/icon_login"
                android:minHeight="15dp"
                android:scaleType="fitCenter"
                app:tint="?attr/colorOnSurface"
                android:src="@drawable/icon_fechar" />

            <!-- Linha separadora -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical"
                android:text="@string/btn_pop_cancela"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp" />
        </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/btnConfirmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/botao_layout_borda_cor"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                tools:ignore="TouchTargetSizeCheck">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/icon_login"
                    android:minHeight="15dp"
                    android:scaleType="fitCenter"
                    app:tint="?attr/colorOnSurface"
                    android:src="@drawable/icon_check" />

                <!-- Linha separadora -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"

                    android:background="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/btn_pop_conf"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>